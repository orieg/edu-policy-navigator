---
// src/pages/rag-test.astro
// No server-side processing needed for this basic test page yet.
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>RAG Test Page - Astro</title>
        <style is:global>
            body {
                font-family: sans-serif;
                margin: 20px;
                background-color: #f4f4f4;
                color: #333;
            }
            .container {
                max-width: 800px;
                margin: auto;
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            h1 {
                text-align: center;
                color: #333;
            }
            textarea {
                width: 98%;
                padding: 10px;
                margin-bottom: 10px;
                border-radius: 4px;
                border: 1px solid #ddd;
                font-size: 16px;
                min-height: 60px;
            }
            button {
                padding: 10px 20px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 16px;
            }
            button:hover {
                background-color: #0056b3;
            }
            button:disabled {
                background-color: #ccc;
                cursor: not-allowed;
            }
            #responseArea {
                margin-top: 20px;
                padding: 15px;
                border: 1px solid #eee;
                border-radius: 4px;
                background-color: #f9f9f9;
                min-height: 100px;
                white-space: pre-wrap;
                word-wrap: break-word;
            }
            .status {
                margin-top: 15px;
                font-style: italic;
                color: #555;
                text-align: center;
            }
            .progress-bar-container {
                width: 100%;
                background-color: #e0e0e0;
                border-radius: 4px;
                margin-bottom: 10px;
                display: none;
            }
            .progress-bar {
                width: 0%;
                height: 20px;
                background-color: #007bff;
                border-radius: 4px;
                text-align: center;
                line-height: 20px;
                color: white;
                transition: width 0.3s ease;
            }

            /* Styles for the similarity validation table */
            #similarityResultsArea table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 15px;
                font-size: 0.9em;
            }
            #similarityResultsArea th,
            #similarityResultsArea td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }
            #similarityResultsArea th {
                background-color: #f0f0f0;
                font-weight: bold;
            }
            #similarityResultsArea tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }
            #similarityResultsArea tbody tr:hover {
                background-color: #f1f1f1;
            }
            #similarityResultsArea td.webllm-score,
            #similarityResultsArea td.inbrowser-transformers-score {
                font-family: monospace;
            }
            /* End of styles for similarity table */

            .intermediate-output {
                margin-top: 5px;
                margin-bottom: 15px;
                padding: 10px;
                border: 1px solid #e0e0e0;
                border-radius: 4px;
                background-color: #f9f9f9;
                min-height: 30px;
                white-space: pre-wrap;
                word-wrap: break-word;
            }

            /* Basic styling for accordion */
            .accordion-section summary {
                cursor: pointer;
                padding: 10px;
                background-color: #f0f0f0;
                border: 1px solid #ddd;
                border-radius: 4px;
                margin-bottom: 5px;
                font-weight: bold;
            }
            .accordion-section summary:hover {
                background-color: #e9e9e9;
            }
            .accordion-section fieldset {
                border-top: none; /* Remove top border of fieldset as summary acts as header */
                margin-top: -5px; /* Pull fieldset up slightly */
            }

        </style>
    </head>
    <body>
        <div class="container">
            <h1>In-Browser RAG Test (Astro Page)</h1>

            <div class="progress-bar-container" id="progressBarContainer">
                <div class="progress-bar" id="progressBar">0%</div>
            </div>
            <div class="status" id="statusLabel">
                Initializing... please wait.
            </div>

            <details class="accordion-section">
                <summary>Prompt Configuration</summary>
                <fieldset>
                    <div>
                        <label for="systemPromptInput">System Prompt (optional):</label
                        ><br />
                        <textarea
                            id="systemPromptInput"
                            placeholder="e.g., You are a helpful AI assistant specializing in education policy."
                        ></textarea>
                    </div>

                    <div>
                        <label for="rephrasePromptTemplateInput"
                            >Rephrase Prompt Template (use &lbrace;query&rbrace; for user query):</label
                        ><br />
                        <textarea id="rephrasePromptTemplateInput" style="height: 80px;"
                        ></textarea>
                    </div>

                    <div>
                        <label for="finalRagPromptTemplateInput"
                            >Final RAG Prompt Template (use &lbrace;context&rbrace; and &lbrace;query&rbrace;):</label
                        ><br />
                        <textarea
                            id="finalRagPromptTemplateInput"
                            style="height: 120px;"></textarea>
                    </div>
                </fieldset>
            </details>

            <details class="accordion-section" open>
                <summary>Chat Model Settings</summary>
                <fieldset>
                    <div id="chatModelConfigSection" style="margin-top: 5px; margin-bottom: 5px;">
                        <div>
                            <label for="temperatureSlider">Temperature: <span id="temperatureValue">0.7</span></label><br />
                            <input type="range" id="temperatureSlider" min="0" max="2" value="0.7" step="0.01" style="width: 98%;">
                        </div>
                        <!-- Add other controls here later e.g., top_p -->
                    </div>
                </fieldset>
            </details>
            
            <fieldset>
                <legend>Main Query & Execution</legend>
                <div>
                    <label for="queryInput">Enter your query:</label><br />
                    <textarea id="queryInput" placeholder="Ask something..."
                    ></textarea>
                </div>
                <button id="submitQueryBtn" disabled>Run Full RAG Pipeline</button>
            </fieldset>

            <hr style="margin-top: 20px; margin-bottom: 20px;" />

            <fieldset>
                <legend>Step-by-Step RAG Control</legend>
                <button id="rephraseQueryBtn" disabled style="margin-right: 10px;"
                    >1. Rephrase Query Only</button
                >
                <h4>Rephrased Query:</h4>
                <div id="rephrasedQueryArea" class="intermediate-output">
                    <!-- Rephrased query will appear here -->
                </div>

                <button
                    id="retrieveContextBtn"
                    disabled
                    style="margin-right: 10px; margin-top:10px;"
                    >2. Retrieve Context Only</button
                >
                <h4>Retrieved Context:</h4>
                <div
                    id="retrievedContextArea"
                    class="intermediate-output"
                    style="max-height: 200px; overflow-y: auto;"
                >
                    <!-- Retrieved context will appear here -->
                </div>

                <button
                    id="generateFinalAnswerBtn"
                    disabled
                    style="margin-top:10px;">3. Generate Final Answer</button
                >
            </fieldset>

            <h2 style="margin-top: 20px;">Response:</h2>
            <div id="responseArea">
                <!-- AI response will appear here -->
            </div>

            <hr style="margin: 30px 0;" />

            <details class="accordion-section">
                <summary>Embedding Similarity Validation</summary>
                <fieldset>
                    <p>
                        Compare cosine similarity of sample text pairs using
                        different embedding methods.
                    </p>
                    <button id="runSimilarityTestBtn" disabled
                        >Run Similarity Comparison</button
                    >
                    <div id="similarityResultsArea" style="margin-top: 15px;">
                        <!-- Similarity results will be populated here by JavaScript -->
                    </div>
                </fieldset>
            </details>
            <!-- End of New Section -->
        </div>

        <!-- Astro will handle the .ts import and compilation -->
        <script type="module" src="/src/rag-testing/rag_test_main.ts"></script>
    </body>
</html>
