---
import BaseLayout from "../../layouts/BaseLayout.astro";
import GuideCard from "../../components/GuideCard.astro";

const pageTitle = "Parent & Community Guides";
const pageDescription =
    "A collection of guides to help navigate California K-12 education topics.";
const breadcrumbs = [{ text: "Home", href: "/" }, { text: pageTitle }];

const BASE_URL = import.meta.env.BASE_URL;

// Data for the guide cards - can be expanded later
const guidesData = [
    {
        href: `${BASE_URL}guides/school-safety-respect-protocol`,
        title: "School Safety & Respect Protocol",
        description:
            "Questions to ask about safety, behavior policies, and creating a positive school climate.",
        iconSvg:
            '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M11.46 20.846a12 12 0 0 1 -7.96 -14.846a12 12 0 0 0 8.5 -3a12 12 0 0 0 8.5 3a12 12 0 0 1 -.09 7.06" /><path d="M15 19l2 2l4 -4" /></svg>',
    },
    {
        href: `${BASE_URL}guides/academic-curriculum`,
        title: "Academic Quality & Curriculum",
        description:
            "Questions to ask about curriculum, teaching methodologies, and student learning.",
        iconSvg:
            '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0" /><path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0" /><path d="M3 6l0 13" /><path d="M12 6l0 13" /><path d="M21 6l0 13" /></svg>',
    },
];
---

<BaseLayout
    title={pageTitle}
    description={pageDescription}
    breadcrumbs={breadcrumbs}
>
    <h1>{pageTitle}</h1>
    <p>
        Explore our collection of guides designed to help parents, students, and
        community members understand and navigate various aspects of California
        K-12 education.
    </p>

    <div class="guides-container">
        {guidesData.map((guide) => <GuideCard {...guide} />)}
    </div>
</BaseLayout>

<style>
    /* All card styles are now in global.css */
    /* .guides-list-container is now .guides-container in global.css */
    /* .guide-card-item is now .guide-card in global.css */
    /* h2 styles are in .guide-card h2 in global.css */
    /* p styles are in .guide-card p in global.css */
    /* .guide-icon styles are in global.css */
</style>
